@{
    Layout = null;
    var extracted = ViewBag.ExtractedSkills as List<string>;
    var missing = ViewBag.MissingSkills as List<string>;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Resume Analysis Result</title>

    <style>
        body {
            font-family: Poppins;
            background: #DBD7D2;
            padding: 50px;
        }

        .container {
            max-width: 900px;
            margin: auto;
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 20px 50px rgba(0,0,0,.2);
        }

        h1 {
            color: #6C3082;
        }

        .score {
            font-size: 60px;
            font-weight: bold;
            margin: 20px 0;
        }

        .section {
            margin-top: 30px;
        }

        ul {
            margin-top: 10px;
        }

        .good {
            color: green;
        }

        .bad {
            color: red;
        }
    </style>
</head>
<body>

    <div class="container">

        <h1>AI Resume Analysis</h1>

        <div class="score">@ViewBag.Score%</div>

        <div class="section">
            <h3>Selected Job Role</h3>
            <p>@ViewBag.JobRole</p>
        </div>

        <div class="section">
            <h3>Extracted Skills</h3>
            <ul>
                @foreach (var skill in extracted)
                {
                    <li class="good">@skill</li>
                }
            </ul>
        </div>

        <div class="section">
            <h3>Missing Skills</h3>
            <ul>
                @foreach (var skill in missing)
                {
                    <li class="bad">@skill</li>
                }
            </ul>
        </div>

        <div class="section">
            <h3>Experience Detected</h3>
            <p>@ViewBag.ExperienceDetected</p>
        </div>

        <div class="section">
            <h3>Improvement Suggestions</h3>
            <p>@ViewBag.Suggestions</p>
        </div>

    </div>

</body>
</html>
