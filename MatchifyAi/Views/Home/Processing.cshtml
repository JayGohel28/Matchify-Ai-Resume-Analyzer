@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Analyzing Resume...</title>

    <meta http-equiv="refresh" content="3;url=/Home/Result" />

    <style>
        body {
            background: #DBD7D2;
            font-family: Poppins;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
        }

        .box {
            background: white;
            padding: 60px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,.2);
        }

        .loader {
            border: 6px solid #eee;
            border-top: 6px solid #6C3082;
            border-radius: 50%;
            width: 60px;
            height: 60px;
            margin: 30px auto;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>

    <div class="box">
        <h2>AI is Analyzing Your Resume</h2>
        <div class="loader"></div>
        <p>Please wait while we evaluate your skills...</p>
    </div>

</body>
</html>
