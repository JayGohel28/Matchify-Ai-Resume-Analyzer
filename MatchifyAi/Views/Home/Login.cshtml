@{
    Layout = null;
    ViewData["Title"] = "Login - Matchify AI";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - Matchify AI</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@400;500&display=swap" rel="stylesheet">

    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Inter',Arial;
            height: 100vh;
            background: #DBD7D2; /* Dust Grey */
        }

        /* MAIN SPLIT */
        .auth-container {
            display: flex;
            height: 100vh;
        }

        /* LOGIN SIDE */
        .login-side {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* LOGIN CARD */
        .login-box {
            background: #F5F5F5; /* White Smoke */
            width: 380px;
            padding: 45px;
            border-radius: 18px;
            box-shadow: 0 18px 35px rgba(0,0,0,.18);
        }

            .login-box h2 {
                font-family: Poppins;
                margin-bottom: 20px;
            }

        /* INPUTS */
        .input-group {
            margin-bottom: 16px;
        }

            .input-group input {
                width: 100%;
                padding: 12px 14px;
                border-radius: 12px;
                border: 1px solid #bbb;
                font-size: 15px;
                background: white;
            }

                .input-group input:focus {
                    outline: none;
                    border-color: #6C3082;
                    box-shadow: 0 0 8px rgba(108,48,130,.35);
                }

        /* BUTTON */
        .btn {
            width: 100%;
            padding: 13px;
            background: #6C3082; /* Velvet Orchid */
            color: white;
            border: none;
            border-radius: 14px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: .3s;
            box-shadow: 0 10px 22px rgba(108,48,130,.45);
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 16px 34px rgba(108,48,130,.65);
            }

        /* LINKS */
        .link {
            display: block;
            text-align: center;
            margin-top: 14px;
            font-size: 14px;
            color: #6C3082;
            text-decoration: none;
            font-weight: 600;
        }

            .link:hover {
                text-decoration: underline;
            }

        /* BRAND PANEL (RIGHT) */
        .brand-panel {
            flex: 1;
            background: #6C3082;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 40px;
        }

            .brand-panel h1 {
                font-family: Poppins;
                font-size: 44px;
                margin-bottom: 12px;
            }

            .brand-panel p {
                max-width: 340px;
                font-size: 18px;
                opacity: .9;
            }

        /* BACK BUTTON */
        .back-btn {
            position: absolute;
            top: 25px;
            left: 25px;
            background: #F5F5F5;
            color: #6C3082;
            padding: 10px 18px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            box-shadow: 0 6px 14px rgba(0,0,0,.18);
        }

            .back-btn:hover {
                background: white;
            }

        /* MOBILE */
        @@media (max-width:900px) {
            .auth-container {
                flex-direction: column;
            }

            .brand-panel {
                height: 35%;
            }
        }
    </style>
</head>

<body>

    <a href="/" class="back-btn">← Back to Home</a>

    <div class="auth-container">

        <!-- LOGIN LEFT -->
        <div class="login-side">

            <div class="login-box">

                <h2>Welcome Back</h2>

                <form>

                    <div class="input-group">
                        <input type="text" placeholder="Username or Email" required>
                    </div>

                    <div class="input-group">
                        <input type="password" placeholder="Password" required>
                    </div>

                    <button class="btn">Login</button>

                </form>

                <a href="#" class="link">Forgot Password?</a>
                <a href="/Account/Register" class="link">Create New Account</a>

            </div>

        </div>

        <!-- BRAND RIGHT -->
        <div class="brand-panel">
            <h1>Matchify AI</h1>
            <p>Optimize your resume keywords and track your job applications</p>
        </div>

    </div>

</body>
</html>
