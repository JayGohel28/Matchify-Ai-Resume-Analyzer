@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard - Matchify AI";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: #DBD7D2;
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background-color: #F5F5F5;
            padding: 30px 22px;
            box-shadow: 4px 0 12px rgba(0,0,0,0.12);
        }

        /* Logo */
        .logo-box {
            text-align: center;
            margin-bottom: 40px;
        }

            .logo-box img {
                width: 75px;
                margin-bottom: 8px;
            }

            .logo-box h2 {
                color: #6C3082;
                font-size: 22px;
                font-weight: 600;
            }

        /* Menu */
        .nav-menu {
            list-style: none;
        }

            .nav-menu li {
                margin-bottom: 16px;
            }

            .nav-menu a {
                display: block;
                padding: 12px 16px;
                text-decoration: none;
                color: #333;
                border-radius: 8px;
                transition: background-color 0.3s, transform 0.3s;
            }

                .nav-menu a:hover {
                    background-color: #6C3082;
                    color: #fff;
                    transform: translateX(6px);
                }

                .nav-menu a.logout {
                    margin-top: 30px;
                    text-align: center;
                    background-color: #6C3082;
                    color: #fff;
                }

                    .nav-menu a.logout:hover {
                        background-color: #5a256f;
                    }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 45px;
        }

        .dashboard-header h1 {
            color: #333;
            font-weight: 600;
        }

        .dashboard-header p {
            color: #555;
            margin-top: 6px;
        }

        /* Cards */
        .card-container {
            margin-top: 30px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 28px;
        }

        .admin-card {
            background-color: #F5F5F5;
            padding: 28px;
            border-radius: 14px;
            box-shadow: 0 8px 18px rgba(0,0,0,0.12);
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .admin-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 14px 26px rgba(0,0,0,0.18);
            }

            .admin-card h3 {
                color: #6C3082;
                margin-bottom: 10px;
                font-weight: 500;
            }

            .admin-card p {
                color: #555;
                font-size: 14px;
                line-height: 1.6;
            }

        /* Footer */
        footer {
            position: fixed;
            bottom: 0;
            left: 260px;
            right: 0;
            background-color: #F5F5F5;
            padding: 12px;
            text-align: center;
            font-size: 13px;
            color: #555;
            border-top: 1px solid rgba(0,0,0,0.1);
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo-box">
            <img src="/images/logo11.png" alt="Matchify AI Logo" />
            <h2>Matchify AI</h2>
        </div>

        <ul class="nav-menu">
            <li><a href="#">Manage Jobs</a></li>
            <li><a href="#">Manage Recruiters</a></li>
            <li><a href="#">Resume Analysis Records</a></li>
            <li><a href="#">Skill Management</a></li>
            <li><a href="#" class="logout">Logout</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="dashboard-header">
            <h1>Admin Dashboard</h1>
            <p>Manage jobs, recruiters, skills, and resume analysis records efficiently.</p>
        </div>

        <div class="card-container">
            <div class="admin-card">
                <h3>Manage Jobs</h3>
                <p>Create, update, and control job listings.</p>
            </div>

            <div class="admin-card">
                <h3>Manage Recruiters</h3>
                <p>Monitor recruiter accounts and activity.</p>
            </div>

            <div class="admin-card">
                <h3>Resume Analysis</h3>
                <p>Track AI-powered resume analysis records.</p>
            </div>

            <div class="admin-card">
                <h3>Skill Management</h3>
                <p>Maintain skill data for accurate job matching.</p>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        © 2026 Matchify AI — Admin Panel
    </footer>

</body>
</html>
