@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard - Matchify AI";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --nav-bg: #F5F5F5;
            --page-bg: #DBD7D2;
            --accent: #6C3082;
            --text-dark: #333;
            --text-muted: #555;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: var(--page-bg);
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* ===== Sidebar ===== */
        .sidebar {
            width: 260px;
            background-color: var(--nav-bg);
            padding: 30px 22px;
            box-shadow: 6px 0 18px rgba(0,0,0,0.1);
            animation: slideIn 0.7s ease;
        }

        @@keyframes slideIn {
            from {
                transform: translateX(-100%);
            }

            to {
                transform: translateX(0);
            }
        }

        /* ===== Logo ===== */
        .logo-box {
            text-align: center;
            margin-bottom: 40px;
            animation: logoFade 1.2s ease;
        }

            .logo-box img {
                width: 75px;
                margin-bottom: 8px;
                animation: logoPulse 3s infinite;
            }

            .logo-box h2 {
                color: var(--accent);
                font-size: 22px;
                font-weight: 600;
                letter-spacing: 0.5px;
            }

        @@keyframes logoFade {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes logoPulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }
        }

        /* ===== Menu ===== */
        .nav-menu {
            list-style: none;
        }

            .nav-menu li {
                margin-bottom: 16px;
            }

            .nav-menu a {
                position: relative;
                text-decoration: none;
                color: var(--text-dark);
                padding: 12px 16px;
                display: block;
                border-radius: 10px;
                transition: all 0.35s ease;
                overflow: hidden;
            }

                .nav-menu a::after {
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: 0;
                    height: 100%;
                    width: 0;
                    background: linear-gradient(90deg, var(--accent), #8d4ab2);
                    z-index: -1;
                    transition: width 0.35s ease;
                }

                .nav-menu a:hover::after {
                    width: 100%;
                }

                .nav-menu a:hover {
                    color: #fff;
                    transform: translateX(8px);
                }

                .nav-menu a.logout {
                    margin-top: 35px;
                    text-align: center;
                    color: #fff;
                    background-color: var(--accent);
                }

                    .nav-menu a.logout:hover {
                        background-color: #5a256f;
                        transform: scale(1.03);
                    }

        /* ===== Main Content ===== */
        .main-content {
            flex: 1;
            padding: 45px;
            animation: fadeIn 1s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .dashboard-header h1 {
            color: var(--text-dark);
            font-weight: 600;
        }

        .dashboard-header p {
            color: var(--text-muted);
            margin-top: 6px;
        }

        /* ===== Cards ===== */
        .card-container {
            margin-top: 30px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 28px;
        }

        .admin-card {
            background-color: var(--nav-bg);
            padding: 28px;
            border-radius: 16px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 22px rgba(0,0,0,0.1);
            transition: all 0.35s ease;
        }

            .admin-card::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                height: 6px;
                width: 100%;
                background: linear-gradient(90deg, var(--accent), #8d4ab2);
            }

            .admin-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 18px 32px rgba(0,0,0,0.18);
            }

            .admin-card h3 {
                color: var(--accent);
                margin-bottom: 10px;
                font-weight: 500;
            }

            .admin-card p {
                color: var(--text-muted);
                font-size: 14px;
                line-height: 1.6;
            }

        /* ===== Footer ===== */
        footer {
            position: fixed;
            bottom: 0;
            left: 260px;
            right: 0;
            background-color: var(--nav-bg);
            padding: 12px;
            text-align: center;
            font-size: 13px;
            color: var(--text-muted);
            border-top: 1px solid rgba(0,0,0,0.08);
        }

        @@media (max-width: 768px) {
            .sidebar {
                width: 220px;
            }

            footer {
                left: 220px;
            }
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo-box">
            <img src="/images/logo11.png" alt="Matchify AI Logo" />
            <h2>Matchify AI</h2>
        </div>

        <ul class="nav-menu">
            <li><a href="#">Manage Jobs</a></li>
            <li><a href="#">Manage Recruiters</a></li>
            <li><a href="#">Resume Analysis Records</a></li>
            <li><a href="#">Skill Management</a></li>
            <li><a href="#" class="logout">Logout</a></li>
        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <div class="dashboard-header">
            <h1>Admin Dashboard</h1>
            <p>Manage jobs, recruiters, skills, and resume analysis records efficiently.</p>
        </div>

        <div class="card-container">
            <div class="admin-card">
                <h3>Manage Jobs</h3>
                <p>Create, update, and control job listings.</p>
            </div>

            <div class="admin-card">
                <h3>Manage Recruiters</h3>
                <p>Monitor recruiter accounts and activity.</p>
            </div>

            <div class="admin-card">
                <h3>Resume Analysis</h3>
                <p>Track AI-powered resume analysis records.</p>
            </div>

            <div class="admin-card">
                <h3>Skill Management</h3>
                <p>Maintain skill data for accurate job matching.</p>
            </div>
        </div>
    </main>

    <footer>
        © 2026 Matchify AI — Admin Panel
    </footer>

</body>
</html>
