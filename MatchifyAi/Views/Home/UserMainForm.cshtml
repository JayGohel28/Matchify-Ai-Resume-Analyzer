@{
    ViewData["Title"] = "Upload Resume - Matchify AI";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@400;500&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-color: #DBD7D2;
            --card-color: #F5F5F5;
            --btn-color: #6C3082;
            --text-dark: #2e2e2e;
            --text-muted: #666;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', sans-serif;
        }

        body {
            background: var(--bg-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* ===== NAVBAR ===== */
        header {
            background: var(--card-color);
            padding: 16px 50px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
        }

        .logo {
            font-family: 'Poppins', sans-serif;
            font-size: 24px;
            font-weight: 700;
            color: var(--btn-color);
        }

        .logout-btn {
            background: var(--btn-color);
            color: #fff;
            padding: 10px 22px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: transform .3s, box-shadow .3s;
        }

            .logout-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 18px rgba(108,48,130,.35);
            }

        /* ===== MAIN ===== */
        main {
            flex: 1;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            padding: 60px;
            align-items: center;
        }

        .info-section h1 {
            font-family: 'Poppins', sans-serif;
            font-size: 36px;
        }

        .info-section span {
            color: var(--btn-color);
        }

        .info-section p {
            margin: 15px 0 25px;
            color: var(--text-muted);
            line-height: 1.7;
        }

        .info-section li {
            list-style: none;
            margin-bottom: 10px;
            font-weight: 500;
        }

            .info-section li::before {
                content: "✔";
                margin-right: 10px;
                color: var(--btn-color);
            }

        /* ===== FORM ===== */
        .form-card {
            background: var(--card-color);
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 14px 35px rgba(0,0,0,.15);
            animation: fadeInRight .8s ease;
        }

        .form-group {
            margin-bottom: 18px;
        }

        label {
            font-weight: 500;
            display: block;
            margin-bottom: 6px;
        }

        input, select {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

            input:focus, select:focus {
                outline: none;
                border-color: var(--btn-color);
                box-shadow: 0 0 0 2px rgba(108,48,130,.2);
            }

        .submit-btn {
            width: 100%;
            padding: 14px;
            background: var(--btn-color);
            color: #fff;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
        }

        /* ===== FOOTER ===== */
        footer {
            background: #2e2e2e;
            color: #ccc;
            padding: 22px;
            text-align: center;
        }

        /* ===== ANIMATIONS ===== */
        @@keyframes fadeInRight {
            from {
                opacity: 0;
                transform: translateX(40px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* ===== RESPONSIVE (FIXED) ===== */
        @@media (max-width: 900px) {
            main {
                grid-template-columns: 1fr;
                padding: 40px 20px;
            }
        }
    </style>
</head>

<body>

    <header>
        <div class="logo">Matchify AI</div>
        <a href="/Account/Logout" class="logout-btn">Logout</a>
    </header>

    <main>
        <div class="info-section">
            <h1>AI-Powered <span>Resume Analysis</span></h1>
            <p>Upload your resume and let Matchify AI match you with the right career path.</p>
            <ul>
                <li>Smart resume parsing</li>
                <li>Accurate job matching</li>
                <li>Skill gap insights</li>
            </ul>
        </div>

        <form class="form-card" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>Resume Upload</label>
                <input type="file" name="ResumeFile" required />
            </div>

            <div class="form-group">
                <label>Desired Job Role</label>
                <select name="JobRole" required>
                    <option value="">Select Role</option>
                    <option>.NET Developer</option>
                    <option>Java Developer</option>
                    <option>Python Developer</option>
                    <option>Full Stack Developer</option>
                    <option>React Developer</option>
                    <option>DevOps Engineer</option>
                    <option>Data Scientist</option>
                </select>
            </div>

            <div class="form-group">
                <label>Experience Level</label>
                <select name="ExperienceLevel" required>
                    <option value="">Select</option>
                    <option>Fresher</option>
                    <option>1–3 Years</option>
                    <option>3–5 Years</option>
                    <option>5+ Years</option>
                </select>
            </div>

            <button class="submit-btn">Upload Details</button>
        </form>
    </main>

    <footer>
        © 2026 Matchify AI · All rights reserved
    </footer>

</body>
</html>
