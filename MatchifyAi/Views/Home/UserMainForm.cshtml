@{
    ViewData["Title"] = "Upload Resume - Matchify AI";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>

    <!-- Premium Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Manrope:wght@400;500;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --bg-color: #DBD7D2;
            --surface: #F5F5F5;
            --primary: #6C3082;
            --navbar: #f4f2ef;
            --text-dark: #2b2b2b;
            --text-muted: #6f6f6f;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Manrope', sans-serif;
            background: var(--bg-color);
            color: var(--text-dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* ================= NAVBAR ================= */
        .navbar-wrap {
            padding: 20px;
        }

        .navbar {
            background: var(--navbar);
            border-radius: 70px;
            padding: 18px 40px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 20px 40px rgba(0,0,0,.15);
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .nav-left img {
                height: 72px;
            }

            .nav-left span {
                font-family: 'Poppins', sans-serif;
                font-size: 22px;
                font-weight: 700;
            }

        .nav-center a {
            margin: 0 18px;
            text-decoration: none;
            font-weight: 500;
            color: var(--text-dark);
        }

        .nav-right a {
            background: var(--primary);
            color: #fff;
            padding: 12px 26px;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            box-shadow: 0 8px 20px rgba(108,48,130,.35);
        }

        /* ================= MAIN ================= */
        main {
            flex: 1;
            padding: 70px 60px;
            display: grid;
            grid-template-columns: 1.1fr 1fr;
            gap: 60px;
            align-items: center;
        }

        /* ===== LEFT CONTENT ===== */
        .content {
            animation: fadeLeft .9s ease;
        }

            .content h1 {
                font-family: 'Poppins', sans-serif;
                font-size: 44px;
                line-height: 1.2;
            }

                .content h1 span {
                    color: var(--primary);
                }

            .content p {
                margin: 22px 0 30px;
                color: var(--text-muted);
                font-size: 17px;
                line-height: 1.7;
            }

        .features {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
        }

        .feature-box {
            background: rgba(255,255,255,.6);
            padding: 16px;
            border-radius: 14px;
            font-weight: 600;
            box-shadow: 0 6px 18px rgba(0,0,0,.08);
        }

        /* ===== FORM ===== */
        .form-card {
            background: var(--surface);
            padding: 42px;
            border-radius: 22px;
            box-shadow: 0 20px 45px rgba(0,0,0,.18);
            animation: fadeRight .9s ease;
        }

            .form-card h2 {
                font-family: 'Poppins', sans-serif;
                margin-bottom: 8px;
            }

            .form-card p {
                color: var(--text-muted);
                margin-bottom: 28px;
                font-size: 14px;
            }

        .field {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            font-size: 14px;
            margin-bottom: 6px;
            display: block;
        }

        input, select {
            width: 100%;
            padding: 14px 16px;
            border-radius: 12px;
            border: 1.5px solid #d0d0d0;
            font-size: 14px;
            transition: .3s;
        }

            input:focus, select:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(108,48,130,.2);
            }

        .submit-btn {
            width: 100%;
            padding: 16px;
            background: var(--primary);
            color: #fff;
            border: none;
            border-radius: 14px;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            margin-top: 10px;
            box-shadow: 0 10px 24px rgba(108,48,130,.4);
            transition: .3s;
        }

            .submit-btn:hover {
                transform: translateY(-2px);
            }

        /* ================= FOOTER ================= */
        footer {
            background: var(--navbar);
            padding: 24px;
            text-align: center;
            font-size: 14px;
            font-weight: 500;
        }

        /* ================= ANIMATIONS ================= */
        @@keyframes fadeLeft {
            from {
                opacity: 0;
                transform: translateX(-40px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes fadeRight {
            from {
                opacity: 0;
                transform: translateX(40px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* ================= RESPONSIVE ================= */
        @@media (max-width: 900px) {
            main {
                grid-template-columns: 1fr;
                padding: 40px 20px;
            }

            .nav-center {
                display: none;
            }
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <div class="navbar-wrap">
        <nav class="navbar">
            <div class="nav-left">
                <img src="/images/logo11.png" alt="Logo" />
              
            </div>

            <div class="nav-right">
                <a href="/Account/Logout">Logout</a>
            </div>
        </nav>
    </div>

    <!-- MAIN -->
    <main>

        <!-- INFO -->
        <div class="content">
            <h1>Build Your Career With <span>AI Precision</span></h1>
            <p>
                Matchify AI analyzes your resume, understands your experience,
                and maps you to roles that actually fit — not random job listings.
            </p>

            <div class="features">
                <div class="feature-box">AI Resume Parsing</div>
                <div class="feature-box">Role Intelligence</div>
                <div class="feature-box">Skill Gap Detection</div>
                <div class="feature-box">Smart Matching</div>
            </div>
        </div>

        <!-- FORM -->
        <form class="form-card" method="post" enctype="multipart/form-data">
            <h2>Upload Resume</h2>
            <p>Just 4 inputs. AI does the rest.</p>

            <!-- 1 -->
            <div class="field">
                <label>Resume File</label>
                <input type="file" name="ResumeFile" required />
            </div>

            <!-- 2 -->
            <div class="field">
                <label>Desired Job Role</label>
                <select name="JobRole" required>
                    <option value="">Select Role</option>
                    <option>.NET Developer</option>
                    <option>Java Developer</option>
                    <option>Python Developer</option>
                    <option>Full Stack Developer</option>
                    <option>Frontend Developer</option>
                    <option>Backend Developer</option>
                    <option>DevOps Engineer</option>
                    <option>Data Scientist</option>
                    <option>AI Engineer</option>
                </select>
            </div>

            <!-- 3 -->
            <div class="field">
                <label>Experience Level</label>
                <select name="ExperienceLevel" required>
                    <option value="">Select Experience</option>
                    <option>Fresher</option>
                    <option>1–3 Years</option>
                    <option>3–5 Years</option>
                    <option>5+ Years</option>
                </select>
            </div>

            <!-- 4 (New dropdown) -->
            <div class="field">
                <label>Employment Type</label>
                <select name="EmploymentType" required>
                    <option value="">Select Type</option>
                    <option>Full Time</option>
                    <option>Part Time</option>
                    <option>Internship</option>
                    <option>Contract</option>
                </select>
            </div>

            <button class="submit-btn">Analyze Resume</button>
        </form>

    </main>

    <footer>
        © 2026 Matchify AI · Smart Career Intelligence
    </footer>

</body>
</html>
