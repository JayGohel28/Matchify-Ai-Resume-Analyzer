@{
    Layout = null;
    ViewData["Title"] = "Recruiter - Post Job";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --white-smoke: #F5F5F5;
            --dust-grey: #DBD7D2;
            --orchid: #6C3082;
            --orchid-dark: #58276a;
            --text-dark: #2d2d2d;
            --radius-xl: 30px;
            --radius-md: 14px;
        }

        * {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            margin: 0;
            background: var(--dust-grey);
            min-height: 100vh;
            animation: fadeIn 0.6s ease;
        }

        /* ================= NAVBAR (PILL STYLE) ================= */
        .nav-wrapper {
            padding: 24px;
        }

        .navbar {
            background: var(--white-smoke);
            border-radius: 40px;
            padding: 18px 36px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 18px 40px rgba(0,0,0,0.15);
        }

        .nav-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }

            .nav-left img {
                height: 46px;
            }

        .nav-menu {
            list-style: none;
            display: flex;
            gap: 28px;
            margin: 0;
            padding: 0;
        }

            .nav-menu a {
                text-decoration: none;
                font-weight: 500;
                color: var(--text-dark);
                position: relative;
            }

                .nav-menu a::after {
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: -6px;
                    width: 0;
                    height: 2px;
                    background: var(--orchid);
                    transition: width 0.3s ease;
                }

                .nav-menu a:hover::after {
                    width: 100%;
                }

        .logout-btn {
            background: var(--orchid);
            color: #fff;
            border: none;
            padding: 10px 22px;
            border-radius: 999px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(108,48,130,0.35);
        }

            .logout-btn:hover {
                background: var(--orchid-dark);
                transform: translateY(-2px);
            }

        /* ================= FORM ================= */
        .container {
            display: flex;
            justify-content: center;
            padding: 40px 20px 80px;
        }

        .form-card {
            background: var(--white-smoke);
            width: 100%;
            max-width: 820px;
            padding: 48px;
            border-radius: var(--radius-xl);
            box-shadow: 0 30px 70px rgba(0,0,0,0.22);
            animation: slideUp 0.8s ease;
        }

        .form-header {
            text-align: center;
            margin-bottom: 36px;
        }

            .form-header h2 {
                margin: 0;
                font-size: 28px;
                font-weight: 700;
                color: var(--text-dark);
            }

            .form-header p {
                margin-top: 8px;
                font-size: 14px;
                color: #666;
            }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group.full {
                grid-column: 1 / -1;
            }

            .form-group label {
                font-size: 13px;
                font-weight: 600;
                margin-bottom: 6px;
            }

            .form-group input,
            .form-group select,
            .form-group textarea {
                padding: 13px 15px;
                border-radius: var(--radius-md);
                border: 1px solid #ccc;
                font-size: 14px;
                transition: all 0.25s ease;
            }

            .form-group textarea {
                resize: none;
                min-height: 130px;
            }

                .form-group input:focus,
                .form-group select:focus,
                .form-group textarea:focus {
                    outline: none;
                    border-color: var(--orchid);
                    box-shadow: 0 0 0 4px rgba(108,48,130,0.15);
                    transform: translateY(-1px);
                }

        .submit-btn {
            margin-top: 32px;
            width: 100%;
            padding: 16px;
            border-radius: 999px;
            border: none;
            background: var(--orchid);
            color: #fff;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .submit-btn:hover {
                background: var(--orchid-dark);
                box-shadow: 0 14px 30px rgba(108,48,130,0.4);
                transform: translateY(-2px);
            }

        /* ================= ANIMATIONS ================= */
        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        /* ================= RESPONSIVE ================= */
        @@media (max-width: 768px) {
            .form-grid {
                grid-template-columns: 1fr;
            }

            .form-card {
                padding: 32px 22px;
            }
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <div class="nav-wrapper">
        <div class="navbar">
            <div class="nav-left">
                <img src="~/images/logo11.png" alt="Matchify AI Logo" />
                <ul class="nav-menu">
                    <li><a href="/">Home</a></li>
                    <li><a href="#">Post Job</a></li>
                    <li><a href="#">Manage Jobs</a></li>
                </ul>
            </div>
            <button class="logout-btn">Logout</button>
        </div>
    </div>

    <!-- FORM -->
    <div class="container">
        <form class="form-card" method="post">
            <div class="form-header">
                <h2>Create a Job Post</h2>
                <p>Provide accurate details to attract the right candidates</p>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Job Title *</label>
                    <input type="text" required />
                </div>

                <div class="form-group">
                    <label>Experience Level *</label>
                    <select required>
                        <option value="">Select</option>
                        <option>Fresher</option>
                        <option>1–3 Years</option>
                        <option>3–5 Years</option>
                        <option>5+ Years</option>
                    </select>
                </div>

                <div class="form-group full">
                    <label>Required Skills *</label>
                    <input type="text" placeholder="ASP.NET Core, SQL, React" required />
                </div>

                <div class="form-group full">
                    <label>Job Description *</label>
                    <textarea required></textarea>
                </div>

                <div class="form-group">
                    <label>Job Location</label>
                    <input type="text" />
                </div>

                <div class="form-group">
                    <label>Employment Type</label>
                    <select>
                        <option value="">Select</option>
                        <option>Full Time</option>
                        <option>Part Time</option>
                        <option>Internship</option>
                        <option>Contract</option>
                    </select>
                </div>

                <div class="form-group full">
                    <label>Company Name (Optional)</label>
                    <input type="text" />
                </div>
            </div>

            <button type="submit" class="submit-btn">Post Job</button>
        </form>
    </div>

</body>
</html>
