@{
    Layout = null;
    ViewData["Title"] = "Recruiter - Post Job";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --white-smoke: #F5F5F5;
            --dust-grey: #DBD7D2;
            --orchid: #6C3082;
            --orchid-dark: #58276a;
            --text-dark: #2d2d2d;
            --radius-xl: 30px;
            --radius-md: 14px;
        }

        * {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            margin: 0;
            background: var(--dust-grey);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            animation: fadeIn 0.6s ease;
        }

        /* ================= NAVBAR ================= */
        .nav-wrapper {
            padding: 24px;
        }

        .navbar {
            background: var(--white-smoke);
            border-radius: 40px;
            padding: 18px 36px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 18px 40px rgba(0,0,0,0.15);
        }

        .nav-left img {
            height: 72px;
        }

        .nav-right {
            display: flex;
            align-items: center;
            gap: 28px;
        }

            .nav-right a {
                text-decoration: none;
                font-weight: 500;
                color: var(--text-dark);
                position: relative;
            }

                .nav-right a::after {
                    content: "";
                    position: absolute;
                    left: 0;
                    bottom: -6px;
                    width: 0;
                    height: 2px;
                    background: var(--orchid);
                    transition: width 0.3s ease;
                }

                .nav-right a:hover::after {
                    width: 100%;
                }

        .logout-btn {
            background: var(--orchid);
            color: #fff;
            border: none;
            padding: 10px 22px;
            border-radius: 999px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(108,48,130,0.35);
        }

            .logout-btn:hover {
                background: var(--orchid-dark);
                transform: translateY(-2px);
            }

        /* ================= FORM ================= */
        .container {
            display: flex;
            justify-content: center;
            padding: 30px 20px 80px;
            flex: 1;
        }

        .form-card {
            background: var(--white-smoke);
            width: 100%;
            max-width: 900px;
            padding: 50px;
            border-radius: var(--radius-xl);
            box-shadow: 0 30px 70px rgba(0,0,0,0.22);
            animation: slideUp 0.8s ease;
        }

        .info-box {
            background: #eee9f2;
            border-left: 6px solid var(--orchid);
            padding: 18px 22px;
            border-radius: 16px;
            margin-bottom: 35px;
            font-size: 14px;
            color: #444;
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .form-header h2 {
                margin: 0;
                font-size: 30px;
                font-weight: 700;
            }

            .form-header p {
                margin-top: 8px;
                font-size: 14px;
                color: #666;
            }

        .section-title {
            margin: 40px 0 20px;
            font-size: 18px;
            font-weight: 600;
            border-bottom: 2px solid #ddd;
            padding-bottom: 8px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 22px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group.full {
                grid-column: 1 / -1;
            }

            .form-group label {
                font-size: 13px;
                font-weight: 600;
                margin-bottom: 6px;
            }

        .hint {
            font-size: 12px;
            color: #777;
            margin-bottom: 6px;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            padding: 13px 15px;
            border-radius: var(--radius-md);
            border: 1px solid #ccc;
            font-size: 14px;
            transition: all 0.25s ease;
        }

        .form-group textarea {
            resize: none;
            min-height: 130px;
        }

            .form-group input:focus,
            .form-group select:focus,
            .form-group textarea:focus {
                outline: none;
                border-color: var(--orchid);
                box-shadow: 0 0 0 4px rgba(108,48,130,0.15);
            }

        .submit-btn {
            margin-top: 40px;
            width: 100%;
            padding: 16px;
            border-radius: 999px;
            border: none;
            background: var(--orchid);
            color: #fff;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .submit-btn:hover {
                background: var(--orchid-dark);
                box-shadow: 0 14px 30px rgba(108,48,130,0.4);
                transform: translateY(-2px);
            }

        /* ================= FOOTER (UNCHANGED) ================= */
        footer {
            background: var(--white-smoke);
            padding: 50px 30px 20px;
            border-radius: 40px 40px 0 0;
            box-shadow: 0 -10px 30px rgba(0,0,0,0.1);
        }

        .footer-grid {
            display: grid;
            grid-template-columns: 2fr 1fr 1fr;
            gap: 30px;
            max-width: 1100px;
            margin: auto;
        }

        footer h4 {
            margin-bottom: 12px;
        }

        footer p,
        footer a {
            font-size: 14px;
            color: #555;
            text-decoration: none;
            line-height: 1.6;
        }

        .footer-bottom {
            text-align: center;
            margin-top: 30px;
            font-size: 13px;
            color: #777;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@media (max-width: 768px) {
            .form-grid {
                grid-template-columns: 1fr;
            }

            .footer-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <div class="nav-wrapper">
        <div class="navbar">
            <div class="nav-left">
                <img src="~/images/logo11.png" alt="Matchify AI Logo" />
            </div>
            <div class="nav-right">
                <a href="/">Home</a>
                <a href="#">Post Job</a>
                <a href="#">Manage Jobs</a>
                <button class="logout-btn">Logout</button>
            </div>
        </div>
    </div>

    <!-- FORM -->
    <div class="container">
        <form class="form-card" method="post">

            <div class="form-header">
                <h2>Create a Job Post</h2>
                <p>Structured job details help our AI recommend better candidates</p>
            </div>

            <div class="info-box">
                Clear job titles and well-defined skills significantly improve candidate matching quality.
            </div>

            <div class="section-title">Job Details</div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Job Title *</label>
                    <span class="hint">Select the most relevant role</span>
                    <select required>
                        <option value="">Select Job Title</option>
                        <option>.NET Developer</option>
                        <option>Full Stack Developer</option>
                        <option>Backend Developer</option>
                        <option>Frontend Developer</option>
                        <option>Software Engineer</option>
                        <option>AI / ML Engineer</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Experience Level *</label>
                    <select required>
                        <option value="">Select</option>
                        <option>Fresher</option>
                        <option>1–3 Years</option>
                        <option>3–5 Years</option>
                        <option>5+ Years</option>
                    </select>
                </div>

                <div class="form-group full">
                    <label>Required Skills *</label>
                    <span class="hint">Hold Ctrl / Cmd to select multiple</span>
                    <select multiple required>
                        <option>C#</option>
                        <option>ASP.NET Core</option>
                        <option>SQL Server</option>
                        <option>MongoDB</option>
                        <option>JavaScript</option>
                        <option>React</option>
                        <option>HTML & CSS</option>
                    </select>
                </div>

                <div class="form-group full">
                    <label>Job Description *</label>
                    <textarea required></textarea>
                </div>
            </div>

            <div class="section-title">Additional Information</div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Job Location</label>
                    <input type="text" />
                </div>

                <div class="form-group">
                    <label>Employment Type</label>
                    <select>
                        <option value="">Select</option>
                        <option>Full Time</option>
                        <option>Part Time</option>
                        <option>Internship</option>
                        <option>Contract</option>
                    </select>
                </div>

                <div class="form-group full">
                    <label>Company Name (Optional)</label>
                    <input type="text" />
                </div>
            </div>

            <button type="submit" class="submit-btn">Post Job</button>

        </form>
    </div>

    <!-- FOOTER -->
    <footer>
        <div class="footer-grid">
            <div>
                <h4>Matchify AI</h4>
                <p>An AI-powered recruitment platform helping recruiters find the right talent faster and smarter.</p>
            </div>
            <div>
                <h4>Quick Links</h4>
                <a href="#">Post Job</a><br />
                <a href="#">Manage Jobs</a><br />
                <a href="#">Candidates</a>
            </div>
            <div>
                <h4>Contact</h4>
                <p>Email: support@matchify.ai</p>
                <p>Location: India</p>
            </div>
        </div>

        <div class="footer-bottom">
            © 2026 Matchify AI. All rights reserved.
        </div>
    </footer>

</body>
</html>
